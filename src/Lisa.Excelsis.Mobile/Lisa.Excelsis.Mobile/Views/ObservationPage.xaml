<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lisa.Excelsis.Mobile.ObservationPage">
  <StackLayout >
      <Label x:Name="Title" Style="{DynamicResource TitleStyle}"  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" VerticalOptions =  "StartAndExpand" />
     
      <Button x:Name="InfoButton" Text="Meer informatie" Clicked="ToggleInfo" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"/>
      <Label x:Name="InfoLabel" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"/>
   
  </StackLayout>
</ContentPage>