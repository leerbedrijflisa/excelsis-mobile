<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lisa.Excelsis.Mobile.HomePage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"  iOS="0, 15, 0, 0" Android="0, 0, 0, 0"/>
  </ContentPage.Padding>
  <StackLayout>
    <Button x:Name="OfflineButton" Text="Ga Offline" Clicked="OfflineButtonClick"/>
    <ListView x:Name="ExamList" Refreshing="Update" ItemTapped="CreateExam">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Text}" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>