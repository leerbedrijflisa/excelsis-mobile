<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lisa.Excelsis.Mobile.CreateExamPage"
             xmlns:local="clr-namespace:Lisa.Excelsis.Mobile;assembly=Lisa.Excelsis.Mobile">
  <StackLayout>
    <Label Text="Naam Kandidaat:"/>
    <Entry x:Name="StudentName"/>
    <Label Text="Studentnummer:"/>
    <Entry x:Name="StudentNumber" Keyboard="Numeric">
      <Entry.Behaviors>
        <local:NumericValidationBehavior />
      </Entry.Behaviors>
    </Entry>
    <Label Text="Examinator"/>
    <Picker x:Name="AssessorPicker" Title="Examinator kiezen" SelectedIndex="1"/>
    
  </StackLayout>
</ContentPage>